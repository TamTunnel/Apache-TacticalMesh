# Apache TacticalMesh Backend Environment Configuration
# SPDX-License-Identifier: Apache-2.0
#
# Copy this file to .env and modify as needed.
# WARNING: Never commit .env files with real secrets!

# Application settings
TM_APP_NAME="Apache TacticalMesh Controller"
TM_APP_VERSION="0.1.0"
TM_DEBUG=false

# Server settings
TM_HOST=0.0.0.0
TM_PORT=8000

# Database connection (PostgreSQL)
TM_DATABASE_URL=postgresql+asyncpg://tacticalmesh:tacticalmesh@localhost:5432/tacticalmesh

# Redis connection (optional)
TM_REDIS_URL=redis://localhost:6379/0

# JWT Authentication
# IMPORTANT: Change this in production!
TM_JWT_SECRET_KEY=your-super-secret-key-change-in-production
TM_JWT_ALGORITHM=HS256
TM_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS settings (comma-separated origins)
TM_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Node heartbeat timeout (seconds)
TM_NODE_HEARTBEAT_TIMEOUT_SECONDS=60

# Logging
TM_LOG_LEVEL=INFO
TM_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Audit logging
TM_AUDIT_LOG_ENABLED=true
